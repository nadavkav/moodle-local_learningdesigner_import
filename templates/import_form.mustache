{{!
    @template local_learningdesigner_import/import_form
}}
<div><h2>{{#str}}chooseldjfile, local_learningdesigner_import{{/str}}</h2></div><br>
<form action="import_ld.php" method="post" enctype="multipart/form-data">
    <label for="file">Learning Designer filename:</label>
    <input type="file" name="file" id="file" /><br /> <br />
    <label for="section">Insert at section:</label>
    <input type="text" name="section" id="section" value="{{section}}" /> <br />
    <input type="hidden" name="courseid" id="courseid" value="{{courseid}}"/>
    <br />
    <input type="submit" name="submit" value="Import" />
</form>
